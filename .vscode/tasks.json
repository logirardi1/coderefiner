// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: watch",   //npm node  package !NAO MUDAR!
            "type": "npm",
            "script": "watch", //debugging watchmode
            "isBackground": true,
            "problemMatcher": [
                {
					// config to run and debug typescript
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": [
                        "relative",
                        "${cwd}"
                    ],
                    "pattern": "$tsc",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "(.*?)"
                        },
                        "endsPattern": {
                            "regexp": "(.*?)"
                        }
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
